<h1><%= t('listing', name: t('contact.title', count: 2)) %></h1>

<table class="table table-striped table-hover table-sm">
 <thead>
   <tr>
     <th scope="col"><%= t('contact.name') %></th>
     <th scope="col"><%= t('contact.birthday') %></th>
     <th scope="col"><%= t('actions') %></th>
   </tr>
 </thead>

 <tbody>
   <% @contacts.each do |contact| %>
     <tr>
       <td><%= contact.name %></td>
       <td><%= contact.birthday %></td>
       <td>
         <div class="btn-group btn-group-sm" role="group">
           <%= link_to t('show'), contact, class: 'btn btn-info', role: :button %>
           <%= link_to t('edit'), edit_contact_path(contact), class: 'btn btn-success', role: :button %>
           <%= link_to t('destroy'), contact, method: :delete, data: { confirm: t('confirm_destroy') }, class: 'btn btn-danger', role: :button %>
         </div>
       </td>
     </tr>
   <% end %>
 </tbody>
</table>

<br>

<%= link_to t('new', name: t('contact.title', count: 1)), new_contact_path, class: 'btn btn-primary', role: :button %>